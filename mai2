      <h2>Calculadora de Fios</h2>
      <p>
        Insira os valores abaixo para calcular a quantidade de fios necess치ria.
      </p>
      <input
        type="number"
        id="a"
        placeholder="Quantidade inicial de fios (A)"
      />
      <input type="number" id="b" placeholder="Medida do teste de trama (B)" />
      <input type="number" id="c" placeholder="Medida da trama desejada (C)" />
      <button onclick="calcular()">Calcular</button>
      <p class="resultado" id="resultado"></p>
    </div>
    <script>
      function calcular() {
        let a = parseFloat(document.getElementById("a").value)
        let b = parseFloat(document.getElementById("b").value)
        let c = parseFloat(document.getElementById("c").value)

        if (a > 0 && b > 0 && c > 0) {
          let x = (a * c) / b // F칩rmula corrigida
          document.getElementById("resultado").innerText =
            `Quantidade de fios necess치rios: ${x.toFixed(2)}`
        } else {
          document.getElementById("resultado").innerText =
            "Por favor, insira valores v치lidos."
        }
      }
    </script>
